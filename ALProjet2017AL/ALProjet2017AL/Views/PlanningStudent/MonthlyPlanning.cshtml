
@{
    ViewBag.Title = "PlanningStudentView";
}

<h2>PlanningStudentView</h2>

<div id="calendar"></div>
<p>Voir mon planning par:</p>

@using (Html.BeginForm("RadioButtonChoice", "PlanningChoice"))
{
    @Html.RadioButton("TypePlanning", "day") <span>Jour</span>
    @Html.RadioButton("TypePlanning", "week") <span>Semaine</span>
    <input type="submit" value="OK" />
}

<input type="time" id="timepicker">

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script src="../Scripts/PlanningJs/classical-calendar.js"></script>
<script src="../Scripts/jquery.ui.datepicker.min.js"></script>