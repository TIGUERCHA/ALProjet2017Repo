
@*@{
    ViewBag.Title = "Popup";
}

<h2>Popup</h2>*@

<div class="modal fade popup" id="Article" tabindex="-1" role="dialog" aria-labelledby="ArticleLabel">
    <div class="modal-dialog modal-md" role="document" style="width: 900px">
        <div class="modal-content">
            <div class="modal-header">

                <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="modalarticleclose"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="ArticleLabel">Recherche d'un article</h4>

            </div>
            <div class="modal-body" id="articlemodalContent">

                <!--///////////////////////////////////////////////////////-->

                <div class="form-group">

                    <div id=bloccodearticle>
                        <label for="labelcodearticle" class="codearticlemargin">Code Article </label> <input class="form-horizontal labelmargin" id="codearticle" type="text">
                    </div>

                    <div id=bloclibellearticle>
                        <label for="labellibellearticle" class="libellearticlemargin">Libellé article </label> <input class="form-horizontal labelmargin" id="libellearticle" type="text">
                        <label for="labellibellehorsnorme" class="libellenormeemargin">Hors norme </label> <input class="form-horizontal labelmargin" id="libellehorsnorme" type="checkbox">
                    </div>

                    @*<div id=bloclibellehorsnorme>
                            <label for="labellibellehorsnorme" class="libellenormeemargin">Hors norme </label> <input class="form-horizontal labelmargin" id="libellearticle" type="checkbox">
                        </div>*@

                </div>

                <div class="form-group">

                    <!-- Indicates a successful or positive action -->
                    @*<button type="button" class="btn btn-success buttonrightmargin buttonleftmargin" data-dismiss="modal" id="articlesearch">Recherche</button>*@

                    <!-- Contextual button for informational alert messages -->
                    <button type="button" class="btn btn-info buttonrightmargin buttonleftmargin" id="articlereset">Annuler</button>

                    <!-- Indicates a dangerous or potentially negative action -->
                    <button type="button" class="btn btn-danger" data-dismiss="modal" id="articleclose">Fermer</button>

                </div>

                @*<div class="form-group">

                    <table id="articlegrid"> </table>
                    <div id="articlepager"></div>

                </div>*@

                <!--///////////////////////////////////////////////////////-->

            </div>
        </div>
        <div class="modal-footer">
        </div>
    </div>
</div>

